<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/image_compare_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新加载"/>

    <EditText
        android:id="@+id/image_compare_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <less.haku.androidres.widget.HImageView
            android:id="@+id/image_compare_fresco"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"/>
        <less.haku.androidres.widget.MultiImageView
            android:id="@+id/image_compare_glide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"/>
        <less.haku.androidres.widget.MultiImageView
            android:id="@+id/image_compare_picasso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fresco"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Glide"
            android:gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Picasso"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
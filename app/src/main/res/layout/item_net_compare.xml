<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/net_request_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="请求方式"/>

    <TextView
        android:id="@+id/net_request_text"
        android:layout_below="@+id/net_request_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://api.hitokoto.us/rand"/>

    <TextView
        android:id="@+id/net_request_response"
        android:layout_below="@+id/net_request_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:text="返回结果"/>

    <TextView
        android:id="@+id/net_request_time"
        android:layout_below="@+id/net_request_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="请求耗时"/>

    <Button
        android:id="@+id/net_request_send"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送请求"/>
</RelativeLayout>
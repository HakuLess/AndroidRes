<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/launch_mode_standard"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="standard"
            android:gravity="center"/>

        <TextView
            android:id="@+id/launch_mode_singleTop"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="singleTop"
            android:gravity="center"/>

        <TextView
            android:id="@+id/launch_mode_singleTask"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="singleTask"
            android:gravity="center"/>

        <TextView
            android:id="@+id/launch_mode_singleInstance"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="singleInstance"
            android:gravity="center"/>
    </LinearLayout>

    <TextView
        android:id="@+id/launch_mode_log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>